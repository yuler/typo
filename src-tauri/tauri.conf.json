{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "typo",
  "version": "0.1.0",
  "identifier": "typo.yuler.dev",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "typo",
        "width": 400,
        "height": 200,
        "visible": false,
        "decorations": false,
        "skipTaskbar": false,
        "alwaysOnTop": true,
        "resizable": true,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}